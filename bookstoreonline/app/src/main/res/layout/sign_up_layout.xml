<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    tools:context="com.example.quang.bookstoreonline.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:textSize="35sp"
            android:textColor="@color/colorGreenA"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line"
            android:id="@+id/imgLineA"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:id="@+id/txtUsernameA"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtUsernameA"
            android:layout_toRightOf="@id/txtUsernameA"
            android:layout_alignBaseline="@+id/txtUsernameA"/>
        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:id="@+id/txtPasswordA"
            android:layout_below="@+id/txtUsernameA"
            android:layout_alignLeft="@+id/txtUsernameA"
            android:layout_marginTop="15dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtPasswordA"
            android:password="true"
            android:layout_toRightOf="@id/txtPasswordA"
            android:layout_alignBaseline="@id/txtPasswordA"/>
        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="Re-password:"
            android:id="@+id/txtRePassword"
            android:layout_below="@+id/txtPasswordA"
            android:layout_alignLeft="@+id/txtPasswordA"
            android:layout_marginTop="15dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtRePassword"
            android:password="true"
            android:layout_toRightOf="@id/txtRePassword"
            android:layout_alignBaseline="@+id/txtRePassword"/>
        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:id="@+id/txtEmail"
            android:layout_below="@+id/txtRePassword"
            android:layout_alignLeft="@+id/txtUsernameA"
            android:layout_marginTop="15dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtEmail"
            android:layout_toRightOf="@id/txtRePassword"
            android:layout_alignBaseline="@+id/txtEmail"/>
        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:id="@+id/txtAddress"
            android:layout_below="@+id/txtEmail"
            android:layout_alignLeft="@+id/txtUsernameA"
            android:layout_marginTop="15dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtAddress"
            android:layout_toRightOf="@id/txtRePassword"
            android:layout_alignBaseline="@+id/txtAddress"/>
        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="Phone:"
            android:id="@+id/txtPhone"
            android:layout_below="@+id/txtAddress"
            android:layout_alignLeft="@+id/txtUsernameA"
            android:layout_marginTop="15dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtPhone"
            android:layout_toRightOf="@id/txtRePassword"
            android:layout_alignBaseline="@+id/txtPhone"
            android:inputType="phone"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:background="@drawable/bgr_button_custom"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="10dp"
            android:id="@+id/btnSignUp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:textAllCaps="false"
            android:background="@drawable/bgr_button_custom"
            android:textColor="@color/colorWhite"
            android:id="@+id/btnExitA"/>
    </LinearLayout>

</LinearLayout>
